    <application
        android:name=".MyApplication"
        android:allowBackup="true"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:supportsRtl="true"
        android:theme="@style/AppTheme">
        <activity android:name=".ui.MainActivity">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>

        <activity
            android:name=".ui.LocationActivity"
            android:label="@string/location" />

        <activity
            android:name=".ui.DrawActivity"
            android:label="@string/draw" />

        <activity
            android:name=".ui.DrawLocationActivity"
            android:label="@string/draw_location" />

        <activity
            android:name=".ui.RecordListActivity"
            android:label="@string/record_list" />

        <!-- 百度地图相关 start -->
        <service
            android:name="com.baidu.location.f"
            android:enabled="true"
            android:process=":remote">
            <intent-filter>
                <action android:name="com.baidu.location.service_v2.2" />
            </intent-filter>
        </service>

        <meta-data
            android:name="com.baidu.lbsapi.API_KEY"
            android:value="QmyHeQAivtq85ygARihqbLV9KTvCz3wC" />
        <!-- 百度地图相关 end -->

    </application>

</manifest>